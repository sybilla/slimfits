{
  "version": "0.2.0",
  "configurations": [{
    "name": "Debug",
    "type": "node",
    "request": "launch", 
    "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
    "protocol": "inspector",
    "stopOnEntry": false,
    "args": [
      "--env=node-debug",
      "--no-cache",
      "--runInBand"
    ],
    "skipFiles": [
      "<node_internals>/**/*.js"
    ]
  }]
}
